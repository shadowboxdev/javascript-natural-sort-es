{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2015",
    "lib": ["ES2015"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["jest", "node"],
    /* Modules */
    "module": "ES2015",
    "rootDir": "./src",
    "moduleResolution": "node",
    /* Emit */
    "declaration": true,
    "esModuleInterop": true,
    // "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "jest.config.ts"
  ]
}
